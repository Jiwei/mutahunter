		"@testing-library/user-event": "^14.5.2",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react": "^4.3.1",
		"@vitest/coverage-v8": "^1.6.0",
		"eslint": "^9.6.0",
		"jsdom": "^24.1.0",
		"prettier": "3.3.2",
		"prettier-config-a11y": "^1.1.2",
		"typescript": "~5.5.3",
		"vite": "^5.3.2",
		"vitest": "^1.6.0"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		],
		"rules": {
			"react/jsx-no-target-blank": "off"
		}
	},
	"prettier": "prettier-config-a11y"
